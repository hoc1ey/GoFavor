<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_gray"
    android:padding="24dp"
    android:fontFamily="@font/open_sans"
    android:gravity="center_horizontal">

    <!-- Botón de regreso circular -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/buttonReturn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_return"
            app:tint="@color/primary_green"
            />
    </LinearLayout>

    <!-- Campos tipo EditText simulados -->
    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/SF_titulo"
        android:background="@color/light_gray"
        android:padding="12dp"
        android:gravity="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/SF_descripcion"
        android:gravity="center"
        android:background="@color/light_gray"
        android:padding="12dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp" />

    <!-- Campos con íconos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/SF_ubicacion"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_ubication"
            app:tint="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Repite lo anterior para "Fecha y Hora" y "Recompensa" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/SF_fecha_hora"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_timer"
            app:tint="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <EditText
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="@string/SF_recompensa"
            android:background="@android:color/transparent"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_earnings"
            app:tint="@color/white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Etiqueta -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SF_tipo_evidencia"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"/>

    <!-- Botones tipo cápsula -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/primary_blue"
            android:text="@string/SF_opcion_foto"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:text="@string/SF_opcion_video"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:text="@string/SF_opcion_foto_texto"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp" />
    </LinearLayout>
</LinearLayout>